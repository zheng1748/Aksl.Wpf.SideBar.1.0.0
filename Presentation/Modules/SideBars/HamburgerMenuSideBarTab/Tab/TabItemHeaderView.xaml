<UserControl x:Class="Aksl.Modules.HamburgerMenuSideBarTab.Views.TabItemHeaderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="200"
             d:DesignWidth="500">
    <UserControl.Resources>

        <ControlTemplate x:Key="ButtonTemplateKey"
                         TargetType="{x:Type Button}">
            <Border x:Name="border"
                    CornerRadius="3"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Width="Auto"
                    Visibility="Visible">
                <ContentPresenter  x:Name="contentPresenter"
                                   Margin="3"
                                   Content="{TemplateBinding Content}"
                                   Width="Auto"
                                   Height="Auto" />
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="true">
                    <Setter TargetName="border"
                            Property="Background"
                            Value="#FF4F0000" />
                    <Setter TargetName="contentPresenter"
                            Property="BitmapEffect">
                        <Setter.Value>
                            <OuterGlowBitmapEffect GlowColor="#FFFFFFFF" />
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsEnabled"
                         Value="false">
                    <Setter TargetName="border"
                            Property="Opacity"
                            Value="0.4" />
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <Style x:Key="CloseTabStButtonyle"
               TargetType="{x:Type Button}">
            <Setter Property="Command"
                    Value="{Binding Path=ExecuteCloseTabCommand}" />
            <Setter Property="Visibility"
                    Value="{Binding Path=CloseTabButtonVisibility}" />
            <Setter Property="Margin"
                    Value="2,0,0,0" />
            <Setter Property="Padding"
                    Value="0" />
            <Setter Property="Width"
                    Value="16" />
            <Setter Property="Height"
                    Value="16" />
            <Setter Property="Foreground"
                    Value="#FFFFFFFF" />
            <Setter Property="Content">
                <Setter.Value>
                    <Path x:Name="Path"
                          Stretch="Fill"
                          StrokeThickness="0.5"
                          Stroke="#FF000000"
                          Fill="#FFFFFFFF"
                          Data="F1 M 2.28484e-007,1.33331L 1.33333,0L 4.00001,2.66669L 6.66667,6.10352e-005L 8,1.33331L 5.33334,4L 8,6.66669L 6.66667,8L 4,5.33331L 1.33333,8L 1.086e-007,6.66669L 2.66667,4L 2.28484e-007,1.33331 Z "
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch" />
                </Setter.Value>
            </Setter>
            <Setter Property="Template"
                    Value="{StaticResource ButtonTemplateKey}" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsSelected,Mode=OneWay}"
                             Value="True">
                    <Setter Property="Background"
                            Value="#EEEEEEEE" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <DockPanel>
        <Button DockPanel.Dock="Right"
                Style="{StaticResource CloseTabStButtonyle}">
        </Button>
        <TextBlock TextWrapping="Wrap"
                   VerticalAlignment="Center"
                   Margin="0,0,0,0">
         <Run Text="{Binding Path=Title,Mode=OneWay}" />
        </TextBlock >
    </DockPanel>
</UserControl>
