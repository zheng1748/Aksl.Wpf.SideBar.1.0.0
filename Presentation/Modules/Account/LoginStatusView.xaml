<UserControl x:Class="Aksl.Modules.Account.Views.LoginStatusView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:options="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:materialDesign="clr-namespace:Aksl.Toolkit.Controls;assembly=Aksl.Toolkit.Controls"
             xmlns:aksl="clr-namespace:Aksl.Toolkit.UI.Controls;assembly=Aksl.Toolkit"
             mc:Ignorable="d"
             prism:ViewModelLocator.AutoWireViewModel="True">
    <UserControl.Resources>
        <Geometry x:Key="AccountPlus"
                  options:Freeze="False">M15,14C12.33,14 7,15.33 7,18V20H23V18C23,15.33 17.67,14 15,14M6,10V7H4V10H1V12H4V15H6V12H9V10M15,12A4,4 0 0,0 19,8A4,4 0 0,0 15,4A4,4 0 0,0 11,8A4,4 0 0,0 15,12Z</Geometry>
        <Geometry x:Key="AccountPlusOutline"
                  options:Freeze="False">M15,4A4,4 0 0,0 11,8A4,4 0 0,0 15,12A4,4 0 0,0 19,8A4,4 0 0,0 15,4M15,5.9C16.16,5.9 17.1,6.84 17.1,8C17.1,9.16 16.16,10.1 15,10.1A2.1,2.1 0 0,1 12.9,8A2.1,2.1 0 0,1 15,5.9M4,7V10H1V12H4V15H6V12H9V10H6V7H4M15,13C12.33,13 7,14.33 7,17V20H23V17C23,14.33 17.67,13 15,13M15,14.9C17.97,14.9 21.1,16.36 21.1,17V18.1H8.9V17C8.9,16.36 12,14.9 15,14.9Z</Geometry>

        <Storyboard x:Key="SignInState">
            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ButtonSignIn"
                                           Storyboard.TargetProperty="Content">
                <DiscreteObjectKeyFrame KeyTime="0">
                    <DiscreteObjectKeyFrame.Value>
                        <Path Data="{StaticResource AccountPlusOutline}" />
                    </DiscreteObjectKeyFrame.Value>
                </DiscreteObjectKeyFrame>
            </ObjectAnimationUsingKeyFrames>
        </Storyboard>

        <Storyboard x:Key="SignIningState">
            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ButtonSignIn"
                                           Storyboard.TargetProperty="Content">
                <DiscreteObjectKeyFrame KeyTime="0">
                    <DiscreteObjectKeyFrame.Value>
                        <Path Data="{StaticResource AccountPlusOutline}" />
                    </DiscreteObjectKeyFrame.Value>
                </DiscreteObjectKeyFrame>
            </ObjectAnimationUsingKeyFrames>
        </Storyboard>

        <Style x:Key="welcomeTextStyle"
               TargetType="TextBlock">
            <Setter Property="FontSize"
                    Value="11" />
            <Setter Property="Foreground"
                    Value="Black" />
            <Setter Property="VerticalAlignment"
                    Value="Top" />
            <Setter Property="Margin"
                    Value="0,2,0,0" />
        </Style>
        <Style x:Key="spacerStyle"
               TargetType="TextBlock">
            <Setter Property="FontSize"
                    Value="11" />
            <Setter Property="Foreground"
                    Value="Black" />
            <Setter Property="HorizontalAlignment"
                    Value="Right" />
            <Setter Property="VerticalAlignment"
                    Value="Center" />
            <Setter Property="Margin"
                    Value="6,2" />
        </Style>
        <Style x:Key="signInButtonStyle"
               TargetType="{x:Type Button}">
            <Setter Property="Width"
                    Value="{Binding Path=Content.Height,RelativeSource={RelativeSource Mode=Self}}" />
            <Setter Property="Height"
                    Value="{Binding Path=Content.Height,RelativeSource={RelativeSource Mode=Self}}" />
            <Setter Property="ToolTip"
                    Value="Sign In" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsSignIning}"
                             Value="False">
                    <Setter Property="Content"
                            Value="{materialDesign:PackIcon Kind=AccountPlus,Size=25}" />
                    <!--<Setter Property="Content"
                         Value="Sign In" />
                 <Setter Property="IsEnabled"
                         Value="True" />-->
                </DataTrigger>
                <DataTrigger Binding="{Binding IsSignIning}"
                             Value="True">
                    <Setter Property="Content"
                            Value="{materialDesign:PackIcon Kind=AccountPlusOutline,Size=25}" />
                    <!--<Setter Property="Content"
                         Value="SignIning" />
                 <Setter Property="IsEnabled"
                         Value="False" />-->
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <!--<Border SnapsToDevicePixels="True"
         BorderBrush="LightGray"
         BorderThickness="2"
         CornerRadius="2"
        >-->
    <!--
     <Border.Background>
         <SolidColorBrush Color="#D3D3D3"></SolidColorBrush>
     </Border.Background>-->
    <Grid Background="{StaticResource PrimaryThemeBrush}">
        <!--<aksl:WindowTitle Title="{Binding Path=Title,Mode=TwoWay}" />-->

        <Grid x:Name="loginGrid"
              Visibility="{Binding Path=IsAuthenticated,Converter={StaticResource booleanNegationToVisibilityConverter}}">
            <Button x:Name="ButtonSignIn"
                    Command="{Binding SignInCommand}"
                    Style="{StaticResource signInButtonStyle}"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Margin="0">

                <!--<ei:Interaction.Triggers>
                     <ei:DataTrigger Binding="{Binding Path=IsSignIning}"
                                     Comparison="Equal"
                                     Value="False">
                         <ei:ControlStoryboardAction ControlStoryboardOption="Play"
                                                     Storyboard="{StaticResource SignInState}" />
                     </ei:DataTrigger>
                     <ei:DataTrigger Binding="{Binding Path=IsSignIning}"
                                     Comparison="Equal"
                                     Value="True">
                         <ei:ControlStoryboardAction ControlStoryboardOption="Play"
                                                     Storyboard="{StaticResource SignIningState}" />
                     </ei:DataTrigger>
                 </ei:Interaction.Triggers>-->
            </Button>
        </Grid>

        <Grid x:Name="logoutGrid"
              Visibility="{Binding Path=IsAuthenticated,Mode=OneWay,Converter={StaticResource booleanToVisibilityConverter}}">
            <!--<Grid.ColumnDefinitions>
                 <ColumnDefinition Width="Auto" />
                 <ColumnDefinition Width="Auto" />
                 <ColumnDefinition Width="Auto" />
             </Grid.ColumnDefinitions>-->
            <!--<TextBlock Grid.Column="0"
                          FontSize="12"
                          Text="{Binding Path=UserName,Mode=OneWay}"
                          TextWrapping="Wrap"
                          HorizontalAlignment="Left"  VerticalAlignment="Center"
                          Margin="2,0,0,0" />-->
            <!--<TextBlock Grid.Column="1"
                        Text=" | "
                        Style="{StaticResource welcomeTextStyle}"
                        Margin="8,12,0,0" />-->
            <Button ToolTip="{Binding Path=UserName,Mode=OneWay}"
                    Content="{materialDesign:PackIcon Kind=AccountOnline,Size=24}"
                    Command="{Binding SignOutCommand}"
                    Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Margin="10,5,2,5" />
        </Grid>
    </Grid>
    <!--</Border>-->
</UserControl>
