<UserControl x:Class="Aksl.Modules.MenuSub.Views.TopLevelMenuItemView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             xmlns:ei="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:materialDesign="clr-namespace:Aksl.Toolkit.Controls;assembly=Aksl.Toolkit.Controls">
    <UserControl.Resources>

        <Storyboard x:Key="IndicatorStoryboard">
            <DoubleAnimation Storyboard.TargetName="IndicatorRectangle"
                             Storyboard.TargetProperty="(UIElement.Opacity)"
                             Duration="0:0:2"
                             From="0.0"
                             To="2.0" />
        </Storyboard>

        <Style x:Key="rectangleStyle"
               TargetType="{x:Type Rectangle}">
            <Setter Property="Fill"
                    Value="Red" />
            <Setter Property="Height"
                    Value="3" />
            <Setter Property="HorizontalAlignment"
                    Value="Stretch" />
        </Style>

        <Style x:Key="labelStyle"
               TargetType="{x:Type Label}">
            <!--<Setter Property="Content"
                  Value="{Binding Title}" />-->
            <Setter Property="FontSize"
                    Value="13.5" />
            <Setter Property="IsEnabled"
                    Value="{Binding IsEnabled,Mode=TwoWay}" />
            <Setter Property="Content">
                <Setter.Value>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="{Binding Path=IconKind,Mode=OneWay}" 
                                                 Foreground="Gray"
                                                 Background="Transparent"
                                                 HorizontalAlignment="Center"
                                                 VerticalAlignment="Center" />
                        <TextBlock Text="{Binding Path=Title,Mode=OneWay}"
                                   Margin="5,0,0,0"
                                   VerticalAlignment="Center"
                                   TextTrimming="CharacterEllipsis"
                                   TextWrapping="NoWrap">
                        </TextBlock>
                    </StackPanel>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsTopLevelSelected,Mode=TwoWay}"
                             Value="True">
                    <Setter Property="FontSize"
                            Value="16" />
                    <Setter Property="FontWeight"
                            Value="Bold" />
                </DataTrigger>
                <!--<DataTrigger Binding="{Binding Children}"
                           Value="{x:Null}">
                  <Setter Property="Visibility"
                          Value="Collapsed" />
              </DataTrigger>-->
                <!--<Trigger Property="IsMouseOver"
                       Value="True">
                  <Setter Property="Background"
                          Value="#EEEEEEEE" />
              </Trigger>-->
                <!--<DataTrigger Binding="{Binding IsSelected,Mode=TwoWay}"
                             Value="True">
                    --><!--<Setter Property="Background"
                            Value="#D3D3D3" />--><!--
                    <Setter Property="FontSize"
                            Value="16" />
                    <Setter Property="FontWeight"
                            Value="Bold" />
                </DataTrigger>
                <DataTrigger Binding="{Binding IsSelected,Mode=TwoWay}"
                             Value="False">
                    <Setter Property="FontSize"
                            Value="12" />
                </DataTrigger>-->
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <StackPanel Orientation="Vertical">
        <Label Style="{StaticResource labelStyle}" />
        <Rectangle x:Name="IndicatorRectangle"
                   Visibility="{Binding Path=IsSelected,Converter={StaticResource booleanToVisibilityConverter}}"
                   Style="{StaticResource rectangleStyle}">
            <ei:Interaction.Triggers>
                <ei:DataTrigger Binding="{Binding Path=IsSelected,Mode=OneWay}"
                                Comparison="Equal"
                                Value="True">
                    <ei:ControlStoryboardAction ControlStoryboardOption="Play"
                                                Storyboard="{StaticResource IndicatorStoryboard}">
                    </ei:ControlStoryboardAction>
                </ei:DataTrigger>
            </ei:Interaction.Triggers>
        </Rectangle>
    </StackPanel>

    <!--<Grid VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <materialDesign:PackIcon Grid.Column="0"
                                 Kind="{Binding Path=IconKind,Mode=OneWay}"
                                 Foreground="Gray"
                                 Background="Transparent"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center" />
        <TextBlock Grid.Column="1"
                   Text="{Binding Path=Title,Mode=OneWay}"
                   Margin="0,0,0,0"
                   VerticalAlignment="Center"
                   FontSize="12"
                   TextTrimming="CharacterEllipsis"
                   TextWrapping="NoWrap">
        </TextBlock>
    </Grid>-->
</UserControl>
