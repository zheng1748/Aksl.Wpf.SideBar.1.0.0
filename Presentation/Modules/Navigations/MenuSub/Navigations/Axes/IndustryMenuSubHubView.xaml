<UserControl x:Class="Aksl.Modules.MenuSub.Views.IndustryMenuSubHubView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:inf="clr-namespace:Aksl.Infrastructure;assembly=Aksl.Infrastructure"
             xmlns:views="clr-namespace:Aksl.Modules.MenuSub.Views"
             mc:Ignorable="d"
             prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="8" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch"
              Background="{StaticResource PrimaryThemeBrush}">
            <views:HierarchicalMenusView DataContext="{Binding Path=HierarchicalMenus}"
                                         HorizontalAlignment="Stretch"
                                         VerticalContentAlignment="Center"
                                         Margin="1,1,1,1" />
        </Grid>

        <Separator Grid.Row="1"
                   Margin="0,1,0,0"
                   Height="8"
                   HorizontalAlignment="Stretch"
                   BorderBrush="#193441" />
        <!--<GridSplitter  Grid.Row="1"
                     Margin="0,1,0,0" HorizontalAlignment="Stretch"
                     BorderBrush="#193441" />-->

        <!--<Border Margin="0"
              Background="WhiteSmoke"
              HorizontalAlignment="Stretch"
              BorderThickness="2"
              CornerRadius="5"
              BorderBrush="Black">-->
        <ContentControl Grid.Row="2"
                        Margin="2"
                        prism:RegionManager.RegionName="{Binding Path=WorkspaceRegionName,Mode=OneWay}">
            <!--prism:RegionManager.RegionName="{x:Static inf:RegionNames.MenuSubWorkspaceRegion}">-->
            <ContentControl.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <RotateTransform />
                    <TranslateTransform />
                </TransformGroup>
            </ContentControl.RenderTransform>
        </ContentControl>
        <!--</Border>-->
    </Grid>
</UserControl>
