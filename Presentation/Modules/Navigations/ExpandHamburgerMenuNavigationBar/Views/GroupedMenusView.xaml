<UserControl x:Class="Aksl.Modules.ExpandHamburgerMenuNavigationBar.Views.GroupedMenusView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:views="clr-namespace:Aksl.Modules.ExpandHamburgerMenuNavigationBar.Views"
             xmlns:viewmodels="clr-namespace:Aksl.Modules.ExpandHamburgerMenuNavigationBar.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <UserControl.Resources>

        <CollectionViewSource x:Key="groupedMenusSource"
                              Source="{Binding Path=GroupedMenus}" />

        <DataTemplate x:Key="groupedMenuDataTemplate"
                      DataType="{x:Type viewmodels:GroupedMenuViewModel}">
            <views:GroupedMenuView />
        </DataTemplate>
    </UserControl.Resources>

    <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                  VerticalScrollBarVisibility="Auto">
        <Border SnapsToDevicePixels="True"
                Background="WhiteSmoke"
                BorderBrush="LightGray"
                BorderThickness="2"
                CornerRadius="5">
            <ItemsControl x:Name="groupedMenusItemsControl"
                          ItemsSource="{Binding Source={StaticResource groupedMenusSource}}"
                          ItemTemplate="{Binding Source={StaticResource groupedMenuDataTemplate}}"
                          Width="320">
            </ItemsControl>
        </Border>
    </ScrollViewer>
</UserControl>
