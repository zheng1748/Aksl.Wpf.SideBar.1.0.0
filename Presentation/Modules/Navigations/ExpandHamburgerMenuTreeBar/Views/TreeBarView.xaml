<UserControl x:Class="Aksl.Modules.ExpandHamburgerMenuTreeBar.Views.TreeBarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:views="clr-namespace:Aksl.Modules.ExpandHamburgerMenuTreeBar.Views"
             xmlns:viewmodels="clr-namespace:Aksl.Modules.ExpandHamburgerMenuTreeBar.ViewModels"
             mc:Ignorable="d">
    <UserControl.Resources>

        <Style x:Key="treeBarTreeViewItemStyle"
               TargetType="{x:Type TreeViewItem}">
            <Setter Property="Background"
                    Value="Transparent" />
            <Setter Property="Padding"
                    Value="0,0,0,0" />
            <Setter Property="IsSelected"
                    Value="{Binding IsSelected,Mode=TwoWay}" />
            <Setter Property="IsExpanded"
                    Value="{Binding IsExpanded,Mode=TwoWay}" />
            <Style.Triggers>
            </Style.Triggers>
        </Style>

        <HierarchicalDataTemplate x:Key="treeBarHierarchicalDataTemplate"
                                  DataType="{x:Type viewmodels:TreeBarItemViewModel}"
                                  ItemsSource="{Binding Children}">
            <views:TreeBarItemView />
        </HierarchicalDataTemplate>
    </UserControl.Resources>

    <TreeView ItemsSource="{Binding Path=AllTreeBarItems}"
              ItemContainerStyle="{StaticResource treeBarTreeViewItemStyle}"
              ItemTemplate="{StaticResource treeBarHierarchicalDataTemplate}"
              Width="320"
              Margin="2">
    </TreeView>
</UserControl>
